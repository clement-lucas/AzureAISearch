@model DocumentSearchPortal.Models.SearchResultViewModel

@{
    ViewData["Title"] = "Search";
}

<style>
    .highlighted {
        background-color: yellow;
    }
</style>

<h2>Document Search</h2>

<!-- Search Controls -->
<div class="row">
    <form asp-controller="Search" asp-action="Search" method="post">
        <div class="form-row align-items-center">
            <div class="col-auto">
                <input type="text" id="normalQuery" name="SearchQuery" class="form-control mb-2" value="@Model.SearchQuery" placeholder="Enter search keywords">
            </div>
            <div class="col-auto">
                <input type="text" id="filterExpression" name="FilterExpression" class="form-control mb-2" value="@Model.FilterExpression" placeholder="Enter filter expression. Example: Category eq 'Category1'and metadata_storage_last_modified ge 2024-02-28T06:00:00Z">
            </div>
            <div class="col-auto">
                <input type="text" id="orderbyExpression" name="OrderByExpression" class="form-control mb-2" value="@Model.OrderByExpression" placeholder="Enter order expression. Example: metadata_storage_last_modified desc">
            </div>
            <div class="col-auto">
                <input type="text" id="topCount" name="Top" class="form-control mb-2" value="@Model.Top" placeholder="Enter count of results. Example: 5">
            </div>
            <div class="col-auto">
                <input type="text" id="searchMode" name="SearchMode" class="form-control mb-2" value="@Model.SearchMode" placeholder="Enter Search Mode. Example: Any or All">
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-primary mb-2">Search</button>
            </div>
        </div>
    </form>

    <!-- Display Normal Search Results -->
    <div class="col-md-6">
        @if (Model?.NormalSearchResults != null && Model?.NormalSearchResults?.TotalCount != 0)
        {
            <h3>Normal Search Results</h3>
            @foreach (var result in Model.NormalSearchResults.GetResults())
            {
                <div class="container mt-4">
                    <div class="row">
                        <div class="col-md-3">
                            <strong>Score</strong>
                        </div>
                        <div class="col-md-9">
                            @(result.Score != null ? result.Score : string.Empty)
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <strong>ファイル名</strong>
                        </div>
                        <div class="col-md-9">
                            @(result.Document.ContainsKey("metadata_storage_name") ? result.Document["metadata_storage_name"] : string.Empty)
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <strong>修正日</strong>
                        </div>
                        <div class="col-md-9">
                            @(result.Document.ContainsKey("metadata_storage_last_modified") ? result.Document["metadata_storage_last_modified"] : string.Empty)
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <strong>説明</strong>
                        </div>
                        <div class="col-md-9">
                            @(result.Document.ContainsKey("Description") ? result.Document["Description"] : string.Empty)
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <strong>カテゴリー</strong>
                        </div>
                        <div class="col-md-9">
                            @(result.Document.ContainsKey("Category") ? result.Document["Category"] : string.Empty)
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <strong>情報名</strong>
                        </div>
                        <div class="col-md-9">
                            @(result.Document.ContainsKey("InformationId") ? result.Document["InformationId"] : string.Empty)
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <strong>プロトコルID</strong>
                        </div>
                        <div class="col-md-9">
                            @(result.Document.ContainsKey("ProtocolId") ? result.Document["ProtocolId"] : string.Empty)
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <strong>公開範囲</strong>
                        </div>
                        <div class="col-md-9">
                            @(result.Document.ContainsKey("DisclosureScope") ? result.Document["DisclosureScope"] : string.Empty)
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <strong>修正者</strong>
                        </div>
                        <div class="col-md-9">
                            @(result.Document.ContainsKey("ModifiedBy") ? result.Document["ModifiedBy"] : string.Empty)
                        </div>
                    </div>
                    <!-- Highlighted search contents -->
                    @if (result.Highlights != null && result.Highlights.ContainsKey("content"))
                    {
                        foreach (var highlight in result.Highlights["content"])
                        {
                            <div class="row">
                                <div class="col-md-3">
                                    <strong>結果</strong>
                                </div>
                                <div class="col-md-9">
                                    @Html.Raw(highlight.Replace("<em>", "<span class=\"highlighted\">").Replace("</em>", "</span>"))
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="row">
                            <div class="col-md-12">
                                <p>No highlights available.</p>
                            </div>
                        </div>
                    }
                    <hr /> <!-- Add a horizontal rule to separate results -->
                </div>
            }
        }
        else
        {
            <p>No normal search results found.</p>
        }
    </div>

    <!-- Display Vector Search Results -->
