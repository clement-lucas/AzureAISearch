@{
    ViewData["Title"] = "Document Search";
}

<h2>Document Search</h2>

<form asp-controller="Search" asp-action="Results" method="post" class="form-inline">
    <div class="form-row align-items-center">
        <div class="col-auto">
            <input type="text" id="query" name="query" class="form-control mb-2" placeholder="Enter search keywords">
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-primary mb-2">Search</button>
        </div>
    </div>
</form>
